{
  "name": "ts-timeframe",
  "author": "Nelson Gomes <nelson.ricardo.gomes@gmail.com>",
  "license": "ISC",
  "version": "0.4.2",
  "description": "Benchmark framework to collect code time metrics and excel in precision.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "benchmark",
    "backend",
    "typescript"
  ],
  "scripts": {
    "test": "jest --verbose --runInBand",
    "clean": "rm -rf lib coverage",
    "prettier": "prettier --write '{.,{src,test}/**}/*.{js,jsx,ts,tsx,json,md}'",
    "prettier:check": "prettier --check '{.,{src,test}/**}/*.{js,jsx,ts,tsx,json,md}'",
    "tslint": "tslint-config-prettier-check ./tslint.json",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "start": "'ts-node' src/index.ts",
    "build": "tsc --pretty -p .",
    "build:watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "update": "ncu -u && npm i",
    "release": "release-it",
    "release-dry-run": "release-it --dry-run"
  },
  "devDependencies": {
    "@types/jest": "25.1.3",
    "@types/node": "13.7.4",
    "jest": "28.1.1",
    "nodemon": "2.0.22",
    "prettier": "1.19.1",
    "release-it": "^15.0.0",
    "ts-jest": "28.0.5",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nelsongomes/ts-timeframe.git"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "jest": {
    "roots": [
      "<rootDir>/test"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[tj]sx?$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coverageDirectory": "test-coverage/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
